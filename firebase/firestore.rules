rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sehr vereinfachte Entwicklungs-/Familien-Regeln:
    // Jeder eingeloggte Benutzer darf alles lesen & schreiben.
    // WARNUNG: Keine Feinabstufung / Kein Schutz vor Datenlöschung.
    // Falls wirklich völlig öffentlich (ohne Login) gewünscht: ersetze Bedingung durch 'true'.
    match /{document=**} {
      allow read, write: if request.auth != null; // oder: true
    }
  }
}
